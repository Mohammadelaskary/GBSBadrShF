<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".warhouse.counting.CountingFragment"
    android:background="@drawable/background"

    >
    <TextView
        android:id="@+id/productionsignoff_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/styleoftextinappbar"
        android:text="@string/counting"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/productionsignoff_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="15dp"

            >

            <TextView
                android:id="@+id/barcodecode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/barcode"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="15dp"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id="@+id/barcode_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/barcodecode_txt"
                app:layout_constraintTop_toBottomOf="@id/barcodecode_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"

                />
            <ImageView
                android:id="@+id/machinecodebarcode_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/barcode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/parentcode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Parent"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/barcodecode_txt"
                app:layout_constraintTop_toBottomOf="@id/barcode_edt"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/parentcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childcode_txt"
                android:layout_marginStart="2dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toEndOf="@id/parentcode_txt"
                app:layout_constraintTop_toTopOf="@id/parentcode_txt"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/parentdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childdesc_txt"
                android:layout_marginTop="10dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toStartOf="@id/parentcode"
                app:layout_constraintTop_toBottomOf="@+id/parentcode"
                />
            <TextView
                android:id="@+id/jobordernum_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/parentdesc"
                app:layout_constraintStart_toStartOf="@id/parentcode_txt"
                android:layout_marginTop="15dp"
                android:text="@string/job_order_number_txt"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/jobordernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/jobordernum_txt"
                app:layout_constraintStart_toEndOf="@id/jobordernum_txt"
                />
            <TextView
                android:id="@+id/paintquantity_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                style="@style/styleoftextbold"
                android:text="Paint Qty : "
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/jobordernum"
                />
            <TextView
                android:id="@+id/paintqtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/paintquantity_txt"
                app:layout_constraintStart_toEndOf="@id/paintquantity_txt"
                />
            <TextView
                android:id="@+id/qty_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qty"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/paintquantity_txt"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@id/paintquantity_txt"
                />
            <EditText
                android:id="@+id/qty_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/qty_txt"
                app:layout_constraintTop_toBottomOf="@id/qty_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"

                />




            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="200dp"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/qty_edt"
                app:layout_constraintBottom_toBottomOf="parent"
                android:backgroundTint="@color/appbarcolor"
                android:layout_marginTop="15dp"
                app:cornerRadius="25dp"
                android:text="@string/save"
                style="@style/styleoftextinbtn"

                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>