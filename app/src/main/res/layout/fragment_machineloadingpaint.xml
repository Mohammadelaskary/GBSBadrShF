            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/childbasketcode_edt"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"
                app:errorEnabled="true"
                app:errorTextColor="@android:color/holo_red_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/childbasketcode_img"
                app:layout_constraintTop_toBottomOf="@+id/operation_txt">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/childbasketcode_newedttxt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Child Basket Code"
                    android:imeOptions="actionGo"
                    android:maxLines="1"
                    android:lines="1"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary" />
            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/childbasketcode_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/childbasketcode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/childqtn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/childbasketcode_edt"
                app:layout_constraintStart_toStartOf="@id/parent_txt"
                android:layout_marginTop="20dp"
                android:text="child Qty : "
                style="@style/styleoftextbold"
                android:visibility="gone"
                />


            <TextView
                android:id="@+id/childqtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/childqtn_txt"
                app:layout_constraintStart_toEndOf="@id/childqtn_txt"
                />
            <ImageView
                android:id="@+id/plus"
                android:layout_width="35dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/childbasket_img"
                android:src="@drawable/plus"
                android:layout_marginEnd="10dp"
                android:visibility="gone"
                />
            <ImageView
                android:id="@+id/childbasket_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/childbasketcode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="200dp"
                android:layout_height="52dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/childqtn_txt"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                android:text="@string/save"
                style="@style/styleoftextinbtn"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/itemcomponent_btn"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_btn"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                android:text="Item Component"
                style="@style/styleoftextinbtn"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/weldingseq_btn"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemcomponent_btn"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                android:text="Weldingsequence"
                style="@style/styleoftextinbtn"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>