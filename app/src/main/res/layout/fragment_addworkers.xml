<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddworkersFragment"
    android:background="@drawable/background"
    >

    <TextView
                android:id="@+id/addworker_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Add worker"
                style="@style/styleoftextinappbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="15dp"
                />



    <TextView
        android:id="@+id/workername_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        style="@style/styleoftextbold"
        android:text="Worker Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addworker_txt"
        />
    <CheckBox
        android:id="@+id/exportid_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:text="Mohamed ahmed"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:padding="8dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        app:layout_constraintTop_toBottomOf="@id/workername_txt"
        />
    <CheckBox
        android:id="@+id/shadatelmansha_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="  Hassan ibrahim"
        android:padding="8dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        app:layout_constraintStart_toStartOf="@id/exportid_checkBox"

        app:layout_constraintTop_toBottomOf="@id/exportid_checkBox"
        />
    <CheckBox
        android:id="@+id/elro5sa_txt"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Mohamed Elsayed"
        android:padding="8dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        app:layout_constraintStart_toStartOf="@id/exportid_checkBox"
        app:layout_constraintTop_toBottomOf="@id/shadatelmansha_txt"
        />
    <CheckBox
        android:id="@+id/markazelba7oth"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text=" Hussien mohamed"
        android:padding="8dp"
        android:textSize="16sp"
        style="@style/styleoftext"
        app:layout_constraintStart_toStartOf="@id/exportid_checkBox"
        app:layout_constraintTop_toBottomOf="@id/elro5sa_txt"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/savecustexa_btn"
        android:layout_width="180dp"
        android:layout_height="55dp"
        app:layout_constraintTop_toBottomOf="@id/elro5sa_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/appbarcolor"
        app:cornerRadius="25dp"
        android:text="@string/save"
       style="@style/styleoftextinbtn"
        />







</androidx.constraintlayout.widget.ConstraintLayout>