<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Paint.PaintsignoffFragment"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/signoff_qtn_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/styleoftextinappbar"
        android:text="Sign Off Quantity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/signoff_qtn_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/station_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                style="@style/styleoftextbold"
                android:text="@string/station"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
            <EditText
                android:id="@+id/station_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/station_txt"
                app:layout_constraintTop_toBottomOf="@id/station_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/itemcardbarcode_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/station_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/parent_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/station_txt"
                app:layout_constraintTop_toBottomOf="@id/station_edt"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/parentcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parentcode_txt"
                android:layout_marginStart="2dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toEndOf="@id/parent_txt"
                app:layout_constraintTop_toTopOf="@id/parent_txt"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/parentdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parentdes_txt"
                android:layout_marginTop="10dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toStartOf="@id/parentcode"
                app:layout_constraintTop_toBottomOf="@+id/parentcode"
                />
            <TextView
                android:id="@+id/basket_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                style="@style/styleoftextbold"
                android:text="@string/basket"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/parentdesc"
                />
            <EditText
                android:id="@+id/basket_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/basket_txt"
                app:layout_constraintTop_toBottomOf="@id/basket_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/basket_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/basket_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <ImageView
                android:id="@+id/plus_img"
                android:layout_width="35dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/basket_img"
                android:src="@drawable/plus"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="28dp"
                />
            <TextView
                android:id="@+id/basketqtn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/styleoftextbold"
                android:text="Basket Qty"
                app:layout_constraintStart_toStartOf="@id/basket_txt"
                app:layout_constraintTop_toBottomOf="@id/basket_edt"
                />
            <EditText
                android:id="@+id/basketqtn_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/basketqtn_txt"
                app:layout_constraintTop_toBottomOf="@id/basketqtn_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                />
            <TextView
                android:id="@+id/loadingqtn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/basketqtn_edt"
                app:layout_constraintStart_toStartOf="@id/basketqtn_txt"
                android:layout_marginTop="25dp"
                android:text="@string/loadingqtn"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/loadingqtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/loadingqtn_txt"
                app:layout_constraintStart_toStartOf="@id/loadingqtn_txt"
                app:layout_constraintEnd_toEndOf="@id/loadingqtn_txt"
                android:layout_marginTop="15dp"
                android:text="255"
                style="@style/styleoftext"
                />

            <TextView
                android:id="@+id/qtn_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/basketqtn_edt"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/sign_off_qty"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="55dp"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/qtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/qtn_txt"
                app:layout_constraintStart_toStartOf="@id/qtn_txt"
                app:layout_constraintEnd_toEndOf="@id/qtn_txt"
                android:layout_marginTop="15dp"
                android:text="120"
                style="@style/styleoftext"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="170dp"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/qtn"
                android:backgroundTint="@color/appbarcolor"
                android:textColor="@color/white"
                android:layout_marginTop="15dp"
                app:cornerRadius="25dp"
                android:text="@string/save"
                style="@style/styleoftextinbtn"

                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>









</androidx.constraintlayout.widget.ConstraintLayout>