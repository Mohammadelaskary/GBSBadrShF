<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".productionsequence.ProductionSequence"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/productionseq_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/styleoftextinappbar"
        android:text="Production Sequence"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/job_order_name"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        app:startIconDrawable="@drawable/ic_barcode_icon"
        app:errorEnabled="true"
        app:errorTextColor="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productionseq_txt">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Job order name"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            android:imeOptions="actionGo"
            android:textColor="@color/colorPrimary" />
    </com.google.android.material.textfield.TextInputLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/job_order_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <LinearLayout
                android:id="@+id/table_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center"
                android:orientation="horizontal">
            <TextView
                android:id="@+id/sequencenum_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:text="@string/sequence_num"
                style="@style/styleoftextbold"
                android:gravity="center"/>
            <TextView
                android:id="@+id/child_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                app:layout_constraintStart_toEndOf="@+id/sequencenum_txt"
                app:layout_constraintTop_toTopOf="@+id/sequencenum_txt"
                android:text="Child"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/loadingqty_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                app:layout_constraintStart_toEndOf="@+id/child_txt"
                app:layout_constraintTop_toTopOf="@+id/sequencenum_txt"
                android:text="Loading Qty"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"
                style="@style/styleoftextbold"
                />

            <TextView
                android:id="@+id/operation_name_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                app:layout_constraintStart_toEndOf="@+id/loadingqty_txt"
                app:layout_constraintTop_toTopOf="@+id/sequencenum_txt"
                android:text="@string/operation"
                style="@style/styleoftextbold"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:gravity="center"/>
            <TextView
                android:id="@+id/joborderqtn_txt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                app:layout_constraintStart_toEndOf="@id/operation_name_txt"
                app:layout_constraintTop_toTopOf="@id/sequencenum_txt"
                android:text="Job order qty"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                style="@style/styleoftextbold"
                android:gravity="center"/>
            </LinearLayout>



            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                app:layout_constraintTop_toBottomOf="@id/table_title"
                app:layout_constraintStart_toStartOf="parent"
                android:background="#808080"
                android:layout_marginTop="7dp"
                />





            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/defectqtn_rv"
                android:layout_width="0dp"
                android:layout_height="230dp"
                tools:itemCount="3"
                app:layout_constraintTop_toBottomOf="@id/view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="@id/view"
                android:layout_marginTop="3dp"
                tools:listitem="@layout/productionsequence_rv"/>


        </androidx.constraintlayout.widget.ConstraintLayout>



    <com.google.android.material.button.MaterialButton
        android:id="@+id/firstloading_btn"
        android:layout_width="240dp"
        android:layout_height="55dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/hsv"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/appbarcolor"
        app:cornerRadius="25dp"
        android:text="@string/first_loading"
        style="@style/styleoftextinbtn"

        />




</androidx.constraintlayout.widget.ConstraintLayout>