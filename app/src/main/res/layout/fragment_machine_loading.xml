<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".machineloading.MachineLoadingFragment"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/machineloading_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/styleoftextinappbar"
        android:text="@string/machine_loading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />




    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/machineloading_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"



            >

            <TextView
                android:id="@+id/jobordernum_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/childcode"
                app:layout_constraintStart_toStartOf="@id/child_txt"
                android:layout_marginTop="15dp"
                android:text="@string/job_order_number_txt"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/jobordernum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/jobordernum_txt"
                app:layout_constraintStart_toEndOf="@id/jobordernum_txt"
                />
            <TextView
                android:id="@+id/child_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Child : "
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/childesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childdesc_txt"
                android:layout_marginStart="2dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toEndOf="@id/child_txt"
                app:layout_constraintTop_toTopOf="@id/child_txt"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/childcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/childcode_txt"
                android:layout_marginTop="10dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toStartOf="@id/childesc"
                app:layout_constraintTop_toBottomOf="@+id/childesc"
                />

            <TextView
                android:id="@+id/Joborderqtn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/job_orderqtn"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/child_txt"
                app:layout_constraintTop_toBottomOf="@id/jobordernum"
                android:layout_marginTop="20dp"
                />
            <TextView
                android:id="@+id/Joborderqtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="550"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/Joborderqtn_txt"
                app:layout_constraintStart_toEndOf="@id/Joborderqtn_txt"
                />
            <TextView
                android:id="@+id/machinecode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/machine_code"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/Joborderqtn_txt"
                app:layout_constraintTop_toBottomOf="@id/Joborderqtn_txt"
                android:layout_marginTop="20dp"
                />
            <EditText
                android:id="@+id/machinecode_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/machinecode_txt"
                app:layout_constraintTop_toBottomOf="@id/machinecode_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/machinecodebarcode_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/machinecode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/diecode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/die_code"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/Joborderqtn_txt"
                app:layout_constraintTop_toBottomOf="@id/machinecode_edt"
                android:layout_marginTop="15dp"
                />

            <EditText
                android:id="@+id/diecode_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@id/diecode_txt"

                app:layout_constraintTop_toBottomOf="@id/diecode_txt" />

            <ImageView
                android:id="@+id/diecodebarcode_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/diecode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/loadingqtn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loadingqtn"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="@id/Joborderqtn_txt"
                app:layout_constraintTop_toBottomOf="@id/diecode_edt"
                android:layout_marginTop="15dp"
                />
            <EditText
                android:id="@+id/loadingqtn_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/loadingqtn_txt"
                app:layout_constraintTop_toBottomOf="@id/loadingqtn_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                android:inputType="number"
                 android:maxLength="5"
                />



            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="220dp"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadingqtn_edt"
                android:layout_marginBottom="35dp"
                android:textColor="@color/white"

                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                android:layout_marginTop="15dp"
                android:text="@string/save"
                style="@style/styleoftextinbtn"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/addworkers_btn"
                android:layout_width="220dp"
                android:layout_height="55dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_btn"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                style="@style/styleoftextinbtn"

                android:text="Add workers"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/componentlist"
                android:layout_width="220dp"
                android:layout_height="55dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/addworkers_btn"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                style="@style/styleoftextinbtn"
                android:text="@string/item_component"

                />
            <TextView
                android:id="@+id/loadingsequenceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="djdjdkd"
                android:visibility="gone"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>