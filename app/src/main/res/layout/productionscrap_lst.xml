<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clientdetin_card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:cardCornerRadius="15dp"
    android:layout_marginBottom="15dp"
    android:backgroundTint="@color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView
            android:id="@+id/child_desc_text"
            style="@style/styleoftextbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Description:"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/child_desc"
            style="@style/styleoftext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/child_desc_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/child_desc_text"
            app:layout_constraintTop_toTopOf="@+id/child_desc_text" />

        <TextView
            android:id="@+id/jobordernum_txt"
            style="@style/styleoftextbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/job_order_name_txt"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/child_desc_text" />

        <TextView
            android:id="@+id/job_order_name"
            style="@style/styleoftext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/jobordernum_txt"
            app:layout_constraintEnd_toEndOf="@+id/child_desc"
            app:layout_constraintStart_toEndOf="@+id/child_desc_text"
            app:layout_constraintTop_toTopOf="@+id/jobordernum_txt" />

        <TextView
            android:id="@+id/rejected_qty_txt"
            style="@style/styleoftextbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Rejected Qty :"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/job_order_name" />

        <TextView
            android:id="@+id/rejected_qtn"
            style="@style/styleoftext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/rejected_qty_txt"
            app:layout_constraintEnd_toEndOf="@+id/job_order_name"
            app:layout_constraintStart_toStartOf="@+id/job_order_name"
            app:layout_constraintTop_toTopOf="@id/rejected_qty_txt" />


        <TextView
            android:id="@+id/dep_txt"
            style="@style/styleoftextbold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dep"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rejected_qty_txt" />

        <TextView
            android:id="@+id/department"
            style="@style/styleoftext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/dep_txt"
            app:layout_constraintEnd_toEndOf="@+id/rejected_qtn"
            app:layout_constraintStart_toStartOf="@+id/rejected_qtn"
            app:layout_constraintTop_toTopOf="@id/dep_txt" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
