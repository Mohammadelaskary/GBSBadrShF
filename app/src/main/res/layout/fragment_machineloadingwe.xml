<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".welding.machineloadingwe.MachineloadingweFragment"
    android:background="@drawable/background"
    >
    <TextView
        android:id="@+id/stationloading_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        style="@style/styleoftextinappbar"
        android:text="@string/station_loading"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"
        />
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stationloading_txt"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true"

        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/parent_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parent"
                style="@style/styleoftextbold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                />
            <TextView
                android:id="@+id/parentcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parentcode_txt"
                android:layout_marginStart="2dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toEndOf="@id/parent_txt"
                app:layout_constraintTop_toTopOf="@id/parent_txt"
                android:layout_marginTop="2dp"
                />
            <TextView
                android:id="@+id/parentdesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/parentdes_txt"
                android:layout_marginTop="10dp"
                style="@style/styleoftext"
                app:layout_constraintStart_toStartOf="@id/parentcode"
                app:layout_constraintTop_toBottomOf="@+id/parentcode"
                />
            <TextView
                android:id="@+id/loadingqtn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/parentdesc"
                app:layout_constraintStart_toStartOf="@id/parent_txt"
                android:layout_marginTop="20dp"
                android:text="@string/loaing_quantites"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/loadingqtns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/loadingqtn_txt"
                app:layout_constraintStart_toEndOf="@id/loadingqtn_txt"
                />
            <TextView
                android:id="@+id/stationcode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="15dp"
                style="@style/styleoftextbold"
                android:text="@string/station"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/loadingqtn_txt"
                />
            <EditText
                android:id="@+id/stationcode_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/stationcode_txt"
                app:layout_constraintTop_toBottomOf="@id/stationcode_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/stationcode_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/stationcode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/operation_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/stationcode_edt"
                app:layout_constraintStart_toStartOf="@id/parent_txt"
                android:layout_marginTop="20dp"
                android:text="@string/operation_txt"
                style="@style/styleoftextbold"
                />
            <TextView
                android:id="@+id/operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welding 1"
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/operation_txt"
                app:layout_constraintStart_toEndOf="@id/operation_txt"
                />
            <TextView
                android:id="@+id/childbasketcode_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                style="@style/styleoftextbold"
                android:text="Child Basket Code"
                app:layout_constraintStart_toStartOf="@id/operation_txt"
                app:layout_constraintTop_toBottomOf="@id/operation_txt"
                />
            <EditText
                android:id="@+id/childbasketcode_edt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="55dp"
                app:layout_constraintStart_toStartOf="@id/childbasketcode_txt"
                app:layout_constraintTop_toBottomOf="@id/childbasketcode_txt"
                android:background="@drawable/edt_bg"
                android:textColor="@color/black"
                />
            <ImageView
                android:id="@+id/childbasketcode_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/childbasketcode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <TextView
                android:id="@+id/childqtn_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/childbasketcode_edt"
                app:layout_constraintStart_toStartOf="@id/parent_txt"
                android:layout_marginTop="20dp"
                android:text="child Qty : "
                style="@style/styleoftextbold"
                />


            <TextView
                android:id="@+id/childqtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                style="@style/styleoftext"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                app:layout_constraintTop_toTopOf="@id/childqtn_txt"
                app:layout_constraintStart_toEndOf="@id/childqtn_txt"
                />
            <ImageView
                android:id="@+id/plus"
                android:layout_width="35dp"
                android:layout_height="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="20dp"
                app:layout_constraintTop_toBottomOf="@id/childbasket_img"
                android:src="@drawable/plus"
                android:layout_marginEnd="10dp"
                />
            <ImageView
                android:id="@+id/childbasket_img"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/childbasketcode_edt"
                android:src="@drawable/barcodel"
                android:layout_marginEnd="10dp"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/save_btn"
                android:layout_width="200dp"
                android:layout_height="52dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/childqtn_txt"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                android:text="@string/save"
                style="@style/styleoftextinbtn"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/itemcomponent_btn"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/save_btn"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                android:text="Item Component"
                style="@style/styleoftextinbtn"

                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/weldingseq_btn"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/itemcomponent_btn"
                android:backgroundTint="@color/appbarcolor"
                app:cornerRadius="25dp"
                android:text="Weldingsequence"
                style="@style/styleoftextinbtn"

                />



        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>